    "description": "Template reutilizável para dashboards de gerenciamento de projetos"
  },
  "defaultColors": {
    "combinations": [
      {
        "name": "Preto e Amarelo",
        "primary": "black",
        "secondary": "yellow",
        "gradient": "from-black via-yellow-600 to-black"
      },
      {
        "name": "Azul e Branco",
        "primary": "blue",
        "secondary": "white",
